@model List<MyPortfolioBlog.Models.BlogPost>
@{
    ViewData["Title"] = "Anasayfa";
}

<h1>Hoş Geldiniz!</h1>
<p>Bu benim kişisel blog/portfolyo sitem.</p>

<h2>Son Blog Gönderileri</h2>
@if (Model != null && Model.Any())
{
    foreach (var post in Model)
    {
        <div>
            <h3>@post.Title</h3>
            <p>@post.Content</p>
            <small>@post.CreatedAt.ToString("dd/MM/yyyy")</small>
        </div>
    }
}
else
{
    <p>Henüz bir blog gönderisi bulunmamaktadır.</p>
}

<h2>Son Portfolyo Projeleri</h2>
<p>Henüz portfolyo projelerim bulunmamaktadır.</p>