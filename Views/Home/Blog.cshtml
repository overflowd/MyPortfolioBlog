@model IEnumerable<MyPortfolioBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Blog";
}

@foreach (var post in Model)
{
    <div class="post-preview">
        <a href="@Url.Action("Details", "Home", new { id = post.Id })">
            <img src="@post.ImageUrl" alt="@post.Title" width="300" height="200">
            <h2 class="post-title">@post.Title</h2>
            <h3 class="post-subtitle">@post.Content.Substring(0, 100)...</h3>
        </a>
        <p class="post-meta"> @post.CreatedAt.ToString("MMMM dd, yyyy")</p>
    </div>
    <hr>
}
